@*Slide show*@
<div class="shadow mb-5 bg-white rounded">
    <div id="carouselExampleControls" class="carousel slide" data-ride="carousel">
        <div class="carousel-inner">
            <div class="carousel-item active">
                <img class="d-block w-100" style="height:400px" src="https://csc.edu.vn/data/images/tin-tuc/lap-trinh-csdl/kien-thuc-lap-trinh/hoc-lap-trinh-bat-dau-tu-dau(2).jpg" alt="First slide">
            </div>
            <div class="carousel-item">
                <img class="d-block w-100" style="height:400px" src="https://sogo.edu.vn/wp-content/uploads/2019/04/lap-trinh-web.jpg" alt="Second slide">
            </div>
            <div class="carousel-item">
                <img class="d-block w-100" style="height:400px" src="https://techtalk.vn/wp-content/uploads/2018/11/learning-web-development-1024x582.jpg" alt="Third slide">
            </div>
        </div>
        <a class="carousel-control-prev" href="#carouselExampleControls" role="button" data-slide="prev">
            <span class="carousel-control-prev-icon" aria-hidden="true"></span>
            <span class="sr-only">Previous</span>
        </a>
        <a class="carousel-control-next" href="#carouselExampleControls" role="button" data-slide="next">
            <span class="carousel-control-next-icon" aria-hidden="true"></span>
            <span class="sr-only">Next</span>
        </a>
    </div>
</div>

